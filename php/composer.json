{
    "name": "ucotron/sdk",
    "description": "Ucotron cognitive memory framework SDK for PHP",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/ucotron-ai/ucotron",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "guzzlehttp/psr7": "^2.6",
        "php-http/mock-client": "^1.6",
        "monolog/monolog": "^3.0"
    },
    "suggest": {
        "monolog/monolog": "For structured request/response logging via LogMiddleware",
        "illuminate/support": "For Laravel facade and service provider integration"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ucotron\\Sdk\\Laravel\\UcotronServiceProvider"
            ],
            "aliases": {
                "Ucotron": "Ucotron\\Sdk\\Laravel\\UcotronFacade"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Ucotron\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ucotron\\Sdk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Ucotron Team",
            "email": "team@ucotron.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-text"
    },
    "keywords": [
        "ucotron",
        "memory",
        "cognitive",
        "llm",
        "semantic-search",
        "graph",
        "sdk"
    ],
    "support": {
        "issues": "https://github.com/ucotron-ai/ucotron/issues",
        "source": "https://github.com/ucotron-ai/ucotron/tree/main/ucotron_arena/sdks/php"
    }
}
